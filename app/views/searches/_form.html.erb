   <center>
 <%= form_tag(searches_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
    <%= label_tag("Course Name") %><br>
      <%= text_field_tag :courseName, params[:courseName], placeholder: "Course Name" %><br>
      <%= label_tag("University") %><br>
      <%= text_field_tag :university, params[:university], placeholder: "University" %>
       <%= label_tag("Grade:") %>
  <%= select_tag(:grade, "<option>A</option><option>B</option><option>C</option><option>D</option><option>F</option>".html_safe) %><br>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
  <% end %>
  <%= yield %>

  <% @users.each do |user| %>
  <div class="user">
    <h1 class="user-title"><%= link_to user.name, user %></h1>
    <p class="user-content"><%= user.email %></p>
  </div>
<% end %>
</center>