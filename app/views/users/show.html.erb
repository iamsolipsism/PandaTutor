<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= image_tag @user.avatar_url.to_s %>
        <center><%= @user.name %><br>
        Studies at: <%= @user.university %><br>
        Contact at: <%= @user.email %><br>
</center>
      </h1>
    </section>
  </aside>
<div class="span8">
    <% if @user.courses.any? %>
      <h3>Courses (<%= @user.courses.count %>)</h3>
      <ol class="courses">
        <%= render @courses %>
      </ol>
      <%= will_paginate @courses %>
<% else %>
<h3> <%= @user.name %> has not taken any courses yet!</h3>
    <% end %>
  </div>
</div>
